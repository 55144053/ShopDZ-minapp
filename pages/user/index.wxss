.tip_dialog{
width: 100%;
height: 100%;
background-color: rgba(0,0,0,0.5);
position: fixed;
top: 0;
left: 0;
z-index: 4999;
}
.tip_dialog .weui-dialog {
position: fixed;
z-index: 5000;
width: 80%;
max-width: 300px;
top: 50%;
left: 50%;
-webkit-transform: translate(-50%, -50%);
transform: translate(-50%, -50%);
background-color: rgba(256,256,256,0.95);
text-align: center;
border-radius: 10rpx;
overflow: hidden;
}
.tip_dialog .weui-dialog__bd {
padding: 35rpx 90rpx 50rpx;
color: #000;
min-height: 40px;
font-size: 28rpx;
line-height: 1.5;
word-wrap: break-word;
word-break: break-all;
text-align: left;
}
.tip_dialog .weui-dialog__ft {
position: relative;
line-height: 48px;
font-size: 18px;
display: -webkit-box;
display: -webkit-flex;
display: block;
margin-bottom: 52rpx;
overflow: hidden;
}
.tip_dialog .weui-dialog__te{
color: #55B837;
font-size: 36rpx;
padding-top: 49rpx;
display: block;
margin: 0 auto
}
.tip_dialog .weui-dialog__btn {
-webkit-tap-highlight-color: rgba(0, 0, 0, 0); 
background: transparent;

width: 228rpx;
height:68rpx;
border-radius: 34rpx;
box-sizing:border-box;
color: #55B837;
border:2rpx solid #55B837;
line-height: 64rpx;
font-size: 29rpx;
}