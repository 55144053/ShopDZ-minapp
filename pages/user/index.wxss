.top{
  height: 488rpx;
  width: 100%;
  overflow: hidden;
  position: relative;
  background: url(http://shopdz.shopdz.cn/wap/img/mine-bg.png) no-repeat center center/cover;
  /* filter: blur(15px); */
}
.top .img{
  width: 160rpx;
  height: 160rpx;
  margin:72rpx auto 24rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 1rpx solid #fff;
}
.oper_{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 132rpx;
  background-color: rgba(0,0,0,.2);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:space-around;
}
.oper_item{
  box-sizing: border-box;
  width: 33%;
  height: 100%;
  padding-top: 20rpx;
}
.oper_item image{
  width: 100%;
  height: 52rpx;
}
.oper_cont{
  line-height: 1;
  text-align: center;
  font-size: 24rpx;
  color: #fff;
}
.gezi{
  width:100%;
  overflow: hidden; 
}
.gezi_item{
  width: 250rpx;
  border-bottom: 1rpx solid #F0F0F0;
  height: 188rpx;
  padding-top: 12rpx;
  box-sizing: border-box;
  float: left;
}
.gezi_item:nth-child(3n+2){
  border-right: 1rpx solid #F0F0F0;
  border-left: 1rpx solid #F0F0F0;
}
.gezi_item image{
  width: 100%;
  height: 100rpx;
}
.gezi_cont{
  text-align: center;
  font-size: 24rpx;
}

.top .text{
  text-align: center;
  font-size: 14px;
  color: #333333;
  padding-top: 12rpx;
}
.item{
  display: flex;
  line-height: 40px;
  border-bottom: 1px solid #dedede;
  background: #fff;
  padding: 0 16px;
}

.item .left{
  flex: 1 0 50%;
  font-size: 14px;
  color: #333333;
}

.item .right{
  flex: 1 0 50%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.item image{
  width: 8px;
  height: 15px;
}

.item text{
  font-size: 12px;
  color: #999999;
  padding-right: 10px;
}

.icon{
  border-bottom:1px solid #EDEDED; 
  display: flex;
  padding: 12px 0;
}
.icon image{
  display: block;
  width: 30px;
  height: 30px;
  margin: 0 auto;
  padding-top: 10px;
}
.icon text{
  display: block;
  text-align: center;
  width: 100%;
  font-size: 14px;
  color: #333;
  padding-top: 10px;
}
.icon navigator{
  flex: 1 0 25%;
}

