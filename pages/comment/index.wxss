page {
  background: rgb(255, 254, 254);
}
.comment-con {
    padding: 24rpx 5% 40rpx 5%;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -o-box-sizing: border-box;
    border-bottom: 1px solid #eee;
}
.name-time {
    overflow: hidden;
    zoom: 1;
}
.name-time view {
    line-height: 2.8;
}

.name1 {
    float: left;
    color: #333;
    font-size: 29rpx;
}
.person-head {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    -webkit-border-radius: 50%;
    /* -moz-border-radius: 50%; */
    /* -o-border-radius: 50%; */
    /* -ms-border-radius: 50%; */
    float: left;
}
.comment-limit {
    line-height: 70rpx;
    float: left;
    padding-left: 25rpx;
}
.time1 {
    float: right;
    font-size: 27rpx;
    color: #888;
}
.comment-word {
    font-size:35rpx;
    color: #333;
    line-height: 2;
    margin-top: 25rpx;
    word-wrap: break-word;
    width: 100%;
}
.comment-spec {
    color: #888;
    font-size: 30rpx;
    line-height: 1.5;
}
.con-img-list {
    width: 100%;
    overflow: hidden;
    zoom: 1;
    margin-top: 25rpx;
}
.con-img-list li {
    float: left;
    width: 24%;
    margin-right: 1%;
    overflow: hidden;
}
.imgW{
 width: 78px;
 margin-right:15px;
 float: left;
}
.imgW:nth-child(3n){
 margin-right: 0;
}
.main {
  display: flex;
  align-items: center;
  justify-content: center;  
  width: 100%;
  height: 100%;
}